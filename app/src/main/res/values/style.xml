<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title">

        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/Padding_all_Title</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="example">

        <item name="android:textAppearanceMedium">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/Option_General</item>
        <item name="android:textColorHint">@color/Option_General</item>
        <item name="android:layout_marginTop">@dimen/left_margin_ans</item>
    </style>

    <style name="Question_general">

        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/Question_General</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_question</item>
        <item name="android:layout_marginTop">@dimen/top_margin_question</item>
    </style>

    <style name="option_general">

        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/Option_General</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_ans</item>
    </style>


    <style name="submit">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#C88890</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/padding_all_submit</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>